{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/cli",
    "packages/plugins/*"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lerna": "^3.15.0",
    "lint-staged": ">=8",
    "prettier": "^1.16.4",
    "rollup": "^1.7.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.js": [
        "eslint --fix",
        "git add"
      ],
      "*.{md}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": ["**/{bin, lib}/*.js"]
  }
}
