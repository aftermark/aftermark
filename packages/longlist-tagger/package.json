{
  "name": "@aftermark/longlist-tagger",
  "version": "1.0.0-alpha.2",
  "description": "Aftermark plugin that adds a class to <ul> and <ol> elements containing more than a specified number of child <li> elements.",
  "keywords": [
    "aftermark",
    "lists",
    "blog",
    "static site",
    "static site generator",
    "static",
    "ssg"
  ],
  "author": "Mihira Jayasekera <open-source@tinymachine.net>",
  "repository": {
    "type" : "git",
    "url" : "https://github.com/aftermark/longlist-tagger.git"
  },
  "bugs": "https://github.com/aftermark/longlist-tagger/issues" ,
  "license": "ISC",
  "main": "./lib/aftermark-longlist-tagger.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "glob": "^7.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": ">=8",
    "prettier": "^1.16.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
