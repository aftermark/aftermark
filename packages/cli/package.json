{
  "name": "@aftermark/cli",
  "version": "1.0.0-alpha.2",
  "description": "CLI for Aftermark, a pluggable DOM-based HTML postprocessor.",
  "main": "./bin/aftermark-cli.js",
  "author": "Mihira Jayasekera <open-source@tinymachine.net>",
  "license": "MIT",
  "repository": "https://github.com/aftermark/aftermark/tree/master/packages/cli",
  "bugs": "https://github.com/aftermark/aftermark/issues",
  "keywords": [
    "aftermark",
    "postprocessor",
    "jsdom",
    "ssg",
    "static site generator"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "bin": {
    "aftermark": "./bin/aftermark-cli.js"
  },
  "engines": {
    "node": "*"
  },
  "files": [
    "bin"
  ],
  "dependencies": {
    "chalk": "^2.4.2",
    "cosmiconfig": "^5.2.1",
    "glob": "^7.1.3",
    "jsdom": "^14.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
