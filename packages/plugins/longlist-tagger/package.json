{
  "name": "@aftermark/longlist-tagger",
  "version": "1.0.0-alpha.2",
  "description": "Aftermark plugin that adds a class to <ul> and <ol> elements containing more than a specified number of child <li> elements.",
  "main": "./lib/aftermark-longlist-tagger.js",
  "author": "Mihira Jayasekera <open-source@tinymachine.net>",
  "license": "MIT",
  "repository": "https://github.com/aftermark/aftermark/tree/master/packages/plugins/longlist-tagger",
  "bugs": "https://github.com/aftermark/aftermark/issues",
  "keywords": [
    "aftermark",
    "lists",
    "blog",
    "ssg",
    "static site generator"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "glob": "^7.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
