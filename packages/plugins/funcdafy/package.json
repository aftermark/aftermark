{
  "name": "@aftermark/funcdafy",
  "version": "1.0.0-alpha.1",
  "description": "Aftermark plugin that adds functional CSS classes (or other classes) to your static site's HTML after it's been generated.",
  "main": "./lib/aftermark-funcdafy.js",
  "author": "Mihira Jayasekera <open-source@tinymachine.net>",
  "license": "MIT",
  "repository": "https://github.com/aftermark/aftermark/tree/master/packages/plugins/funcdafy",
  "bugs": "https://github.com/aftermark/aftermark/issues",
  "keywords": [
    "aftermark",
    "atomic css",
    "blog",
    "fcss",
    "functional css",
    "ssg",
    "static site generator"
  ],
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w"
  },
  "engines": {
    "node": "*"
  },
  "dependencies": {
    "glob": "^7.1.3",
    "js-yaml": "^3.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": ">=8",
    "prettier": "^1.16.4",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-node-resolve": "^4.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
